# vim:syntax=sh:

if [ ! -d "$HOME/.vim_backup" ]; then
    mkdir $HOME/.vim_backup
fi

if [ ! -d "$HOME/.vim" ]; then
    mkdir $HOME/.vim
fi

ln -sfv "$DOTFILES_DIR/vim/vimrc" ~/.vimrc
ln -sfv "$DOTFILES_DIR/vim/gvimrc" ~/.gvimrc

ln -sfv "$DOTFILES_DIR/vim/plugin/" ~/.vim/
ln -sfv "$DOTFILES_DIR/vim/doc/" ~/.vim/
