[user]
    name = First Middle Last
    email = user@mail.com
[sendemail]
    from = First Middle Last <user@mail.com>
    smtpserver = smtp.mail.com
    smtpuser = user@mail.com
    smtpencryption = tls
    chainreplyto = true
    smtpserverport = 587
[push]
    default = simple
[alias]
    b = branch -v
    se = send-email --thread --chain-reply-to
    sea = send-email --thread --annotate --chain-reply-to
    co = checkout
    slog = log --oneline
    stat = status -sb
    files = show --name-status
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
